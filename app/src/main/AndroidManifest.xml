<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    # Kakao map native key
    KAKAO_MAP_NATIVE_KEY = xxxxxxxx

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Beacon"
        tools:targetApi="31">
        <activity
            android:name=".NaviActivity"
            android:exported="false" />
        <activity
            android:name=".login.startActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.signInActivity"
            android:exported="false" />
        <activity
            android:name=".signup.signUpActivity"
            android:exported="false" />
        <activity
            android:name=".signup.setAddAdressActivity"
            android:exported="false" />
        <activity
            android:name=".signup.setAddLocationActivity"
            android:exported="false"
            android:label="@string/title_activity_set_add_location"
            android:theme="@style/Theme.Beacon" />
        <activity
            android:name=".signup.setLocationActivity"
            android:exported="false" />

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value= "${BuildConfig.key}"/>
    </application>

</manifest>